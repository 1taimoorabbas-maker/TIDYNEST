---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteData from '../data/site.json';
import categoriesData from '../data/categories.json';

const { categories } = categoriesData;

const title = `Page Not Found - ${siteData.siteName}`;
const description = `The page you're looking for doesn't exist. Browse our home organization products and guides.`;
---

<BaseLayout title={title} description={description} pathname="/404/">
  <section class="py-16 lg:py-24 bg-gradient-to-br from-[color:var(--color-sage-50)] via-white to-[color:var(--color-sage-100)]">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="w-32 h-32 mx-auto bg-[color:var(--color-sage-700)]/10 rounded-full flex items-center justify-center">
          <svg class="w-16 h-16 text-[color:var(--color-sage-700)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>

      <h1 class="font-serif text-5xl lg:text-6xl font-bold text-stone-800 mb-4">
        404
      </h1>
      <h2 class="font-serif text-2xl lg:text-3xl font-semibold text-stone-700 mb-4">
        Page Not Found
      </h2>
      <p class="text-lg text-stone-600 mb-8">
        Oops! It looks like this page got lost in the clutter. Let's get you back on track to an organized life.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="/"
          class="inline-flex items-center justify-center bg-[color:var(--color-sage-700)] hover:bg-[color:var(--color-sage-800)] text-white font-semibold py-3 px-8 rounded-xl transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go Home
        </a>

        <a
          href="/products/"
          class="inline-flex items-center justify-center bg-white hover:bg-stone-50 text-stone-700 font-semibold py-3 px-8 rounded-xl transition-colors border border-stone-200"
        >
          Browse Products
        </a>
      </div>

      <!-- Quick Links -->
      <div class="bg-white rounded-2xl shadow-sm border border-[color:var(--color-sage-200)] p-8">
        <h3 class="font-serif text-xl font-semibold text-stone-800 mb-6">
          Popular Categories
        </h3>

        <div class="grid grid-cols-2 gap-4">
          {categories.map((cat) => (
            <a
              href={`/category/${cat.slug}/`}
              class="flex items-center p-4 bg-[color:var(--color-sage-50)] hover:bg-[color:var(--color-sage-700)]/10 rounded-xl transition-colors group"
            >
              <div class="w-10 h-10 bg-[color:var(--color-sage-700)]/10 rounded-lg flex items-center justify-center text-[color:var(--color-sage-700)] mr-3 group-hover:bg-[color:var(--color-sage-700)] group-hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
              </div>
              <span class="font-medium text-stone-700 group-hover:text-[color:var(--color-sage-700)] transition-colors">
                {cat.title}
              </span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Helpful Links -->
  <section class="py-12 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="font-serif text-xl font-semibold text-stone-800 mb-6">
        Or Try These
      </h3>

      <div class="flex flex-wrap justify-center gap-4">
        <a href="/guides/" class="text-[color:var(--color-sage-700)] hover:text-[color:var(--color-sage-800)] font-medium transition-colors">
          Organization Guides
        </a>
        <span class="text-stone-300">•</span>
        <a href="/categories/" class="text-[color:var(--color-sage-700)] hover:text-[color:var(--color-sage-800)] font-medium transition-colors">
          All Categories
        </a>
        <span class="text-stone-300">•</span>
        <a href="/products/" class="text-[color:var(--color-sage-700)] hover:text-[color:var(--color-sage-800)] font-medium transition-colors">
          All Products
        </a>
      </div>
    </div>
  </section>
</BaseLayout>