---
import siteData from '../data/site.json';
import categoriesData from '../data/categories.json';

const { categories } = categoriesData;
---

<!-- Affiliate Disclosure Banner -->
<div class="bg-stone-800 text-stone-200 text-xs py-2 px-4 text-center">
  <p>
    <strong>Affiliate Disclosure:</strong> We may earn a commission from purchases made through links on this site at no extra cost to you. 
    <a href="/affiliate-disclosure/" class="underline hover:text-white">Learn more</a>
  </p>
</div>

<!-- Main Header -->
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="w-10 h-10 bg-gradient-to-br from-[#788a66] to-[#5e6d50] rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <div>
          <span class="font-serif text-xl lg:text-2xl font-semibold text-stone-800 group-hover:text-[#5e6d50] transition-colors">{siteData.siteName}</span>
          <span class="hidden sm:block text-xs text-stone-500">{siteData.tagline}</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-stone-600 hover:text-[#5e6d50] font-medium transition-colors">Home</a>
        
        <!-- Categories Dropdown -->
        <div class="relative group">
          <button class="text-stone-600 hover:text-[#5e6d50] font-medium transition-colors flex items-center gap-1">
            Categories
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-white rounded-lg shadow-lg border border-stone-100 py-2 min-w-48">
              {categories.map(cat => (
                <a href={`/category/${cat.slug}/`} class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[#5e6d50] transition-colors">
                  {cat.title}
                </a>
              ))}
              <hr class="my-2 border-stone-100">
              <a href="/categories/" class="block px-4 py-2 text-stone-500 hover:bg-stone-50 hover:text-[#5e6d50] transition-colors text-sm">
                View All Categories
              </a>
            </div>
          </div>
        </div>
        
        <a href="/products/" class="text-stone-600 hover:text-[#5e6d50] font-medium transition-colors">Products</a>
        <a href="/guides/" class="text-stone-600 hover:text-[#5e6d50] font-medium transition-colors">Guides</a>
      </nav>
      
      <!-- CTA Button (Desktop) -->
      <div class="hidden lg:block">
        <a href="/category/craft-room/" class="inline-flex items-center px-5 py-2.5 bg-[#5e6d50] hover:bg-[#4a5641] text-white font-medium rounded-lg transition-colors shadow-sm">
          Start Organizing
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden p-2 rounded-lg text-stone-600 hover:bg-stone-100 transition-colors">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-stone-100">
    <div class="px-4 py-4 space-y-2 bg-white">
      <a href="/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[#5e6d50] font-medium transition-colors">
        Home
      </a>
      
      <div class="px-4 py-2">
        <span class="text-xs font-semibold text-stone-400 uppercase tracking-wider">Categories</span>
      </div>
      {categories.map(cat => (
        <a href={`/category/${cat.slug}/`} class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[#5e6d50] transition-colors pl-8">
          {cat.title}
        </a>
      ))}
      
      <hr class="border-stone-100 my-2">
      
      <a href="/products/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[#5e6d50] font-medium transition-colors">
        All Products
      </a>
      <a href="/guides/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[#5e6d50] font-medium transition-colors">
        Guides
      </a>
      
      <div class="pt-4">
        <a href="/category/craft-room/" class="block w-full text-center px-5 py-3 bg-[#5e6d50] hover:bg-[#4a5641] text-white font-medium rounded-lg transition-colors">
          Start Organizing
        </a>
      </div>
    </div>
  </div>
</header>
