---
import siteData from '../data/site.json';
import categoriesData from '../data/categories.json';

const { categories } = categoriesData;
---

<!-- Affiliate Disclosure Banner -->
<div class="bg-stone-800 text-stone-200 text-xs py-2 px-4 text-center">
  <p>
    <strong>Affiliate Disclosure:</strong> We may earn a commission from purchases made through links on this site at no extra cost to you.
    <a href="/affiliate-disclosure/" class="underline hover:text-white">Learn more</a>
  </p>
</div>

<!-- Main Header -->
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <img
          src="/brand-mark.png"
          alt={siteData.siteName}
          width="40"
          height="40"
          class="w-10 h-10 rounded-lg"
          loading="eager"
        />
        <div>
          <span class="font-serif text-xl lg:text-2xl font-semibold text-stone-800 group-hover:text-[color:var(--color-sage-700)] transition-colors">
            {siteData.siteName}
          </span>
          <span class="hidden sm:block text-xs text-stone-500">{siteData.tagline}</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">Home</a>
        <a href="/about/" class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">About</a>

        <!-- Styles Dropdown -->
        <div class="relative group">
          <button class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors flex items-center gap-1">
            Styles
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-white rounded-lg shadow-lg border border-stone-100 py-2 min-w-56">
              <a href="/styles/#pantry" class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors">
                Pantry Styles
              </a>
              <a href="/styles/#closet" class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors">
                Closet Styles
              </a>
              <a href="/styles/#bathroom" class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors">
                Bathroom Styles
              </a>
              <a href="/styles/#craft-room" class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors">
                Craft Room Styles
              </a>

              <hr class="my-2 border-stone-100" />

              <a href="/styles/" class="block px-4 py-2 text-stone-500 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors text-sm">
                View All Styles
              </a>
            </div>
          </div>
        </div>

        <!-- Categories Dropdown -->
        <div class="relative group">
          <button class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors flex items-center gap-1">
            Categories
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-white rounded-lg shadow-lg border border-stone-100 py-2 min-w-48">
              {categories.map(cat => (
                <a
                  href={`/category/${cat.slug}/`}
                  class="block px-4 py-2 text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors"
                >
                  {cat.title}
                </a>
              ))}
              <hr class="my-2 border-stone-100" />
              <a href="/categories/" class="block px-4 py-2 text-stone-500 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors text-sm">
                View All Categories
              </a>
            </div>
          </div>
        </div>

        <a href="/products/" class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">Products</a>
        <a href="/guides/" class="text-stone-600 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">Guides</a>
      </nav>

      <!-- CTA Button (Desktop) -->
      <div class="hidden lg:block">
        <a
          href="/start/"
          class="inline-flex items-center px-5 py-2.5 bg-[color:var(--color-sage-700)] hover:bg-[color:var(--color-sage-800)] text-white font-medium rounded-lg transition-colors shadow-sm"
        >
          Start Organizing
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden p-2 rounded-lg text-stone-600 hover:bg-stone-100 transition-colors">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-stone-100">
    <div class="px-4 py-4 space-y-2 bg-white">
      <a href="/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">
        Home
      </a>

      <a href="/about/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">
        About
      </a>

      <a href="/styles/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">
        Styles
      </a>

      <div class="px-4 py-2">
        <span class="text-xs font-semibold text-stone-400 uppercase tracking-wider">Categories</span>
      </div>

      {categories.map(cat => (
        <a
          href={`/category/${cat.slug}/`}
          class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] transition-colors pl-8"
        >
          {cat.title}
        </a>
      ))}

      <hr class="border-stone-100 my-2" />

      <a href="/products/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">
        All Products
      </a>
      <a href="/guides/" class="block px-4 py-3 rounded-lg text-stone-600 hover:bg-stone-50 hover:text-[color:var(--color-sage-700)] font-medium transition-colors">
        Guides
      </a>

      <div class="pt-4">
        <a href="/start/" class="block w-full text-center px-5 py-3 bg-[color:var(--color-sage-700)] hover:bg-[color:var(--color-sage-800)] text-white font-medium rounded-lg transition-colors">
          Start Organizing
        </a>
      </div>
    </div>
  </div>
</header>